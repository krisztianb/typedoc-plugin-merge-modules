{
    "include": ["src"],
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2022",
        "module": "Node16",
        "declaration": true,
        "baseUrl": "./",
        "strict": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true
    }
}
